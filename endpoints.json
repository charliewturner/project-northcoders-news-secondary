{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["sort_by", "order", "topic", "comment_count"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with the specified article_id",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of objects containing the users",
    "queries": [],
    "exampleResponse": {
      "username": "username",
      "name": "name",
      "avatar_url": "avatar.url"
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to a specified article",
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "article_id": 3,
        "body": "Placeholder comment <--",
        "votes": 0,
        "author": "butter_bridge",
        "created_at": "2025-06-05T13:28:28.528Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote key on the specified article",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 36,
          "comment_count": 6
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the specified comment",
    "exampleResponse": {
      "status": 204
    }
  }
}
